import random

class Person:
    def __init__(self, name, age, gender, height, weight, occupation):
        self.name = name
        self.age = age
        self.gender = gender
        self.height = height
        self.weight = weight
        self.occupation = occupation

person = Person("Alice", 30, "female", 165, 60, "engineer")

# Generate three unique random numbers between 0 and 5
random_indices = random.sample(range(6), 3)

# Create a list of the attribute names corresponding to the random indices
attribute_names = [attribute_name for i, attribute_name in enumerate(vars(person)) if i in random_indices]

# Access the randomly selected attributes using their names
for attribute_name in attribute_names:
    attribute_value = getattr(person, attribute_name)
    print(f"{attribute_name}: {attribute_value}")